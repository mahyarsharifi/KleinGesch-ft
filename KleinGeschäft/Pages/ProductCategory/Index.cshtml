@page
@model KleinGeschäft.Pages.ProductCategory.IndexModel
@{
}

<div class="text-center">
    <h1 class="display-4 fw-bolder text-center border border-danger p-3 mb-2 bg-danger text-white">Liste Produkt Gruppen</h1>
    <p><a asp-page="./Create" class="btn btn-success">Erstelle Neu</a></p>
</div>

<table class="table table-bordered table-responsive table-hover table-dark">
    <thead>
        <tr>
            <td>#</td>
            <td>Name</td>
            <td>Erstellungs Datum</td>
            <td>Operation</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductCategories)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreationDate</td>
                <td>
                    <a class="btn btn-info" asp-page="./Edit" asp-route-id="@item.Id">Bearbeiten</a>
                </td>
            </tr>
        }
    </tbody>
</table>
